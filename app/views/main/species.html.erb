<h1>Species</h1>

<div class="table-responsive">
  <table class="js--datatable display responsive no-wrap table table-striped table-bordered">
    <thead>
      <tr>
        <th>Name</th>
        <th>Classification</th>
        <th>Skin Colors</th>
        <th>Hair Colors</th>
        <th>Eye Colors</th>
        <th>Language</th>
        <th>Average Height</th>
        <th>Average Lifespan</th>
      </tr>
    </thead>
    <tbody>
      <% @species.each do |specie| %>
        <tr>
          <td><%= specie.name %></td>
          <td><%= specie.classification %></td>
          <td><%= specie.skin_colors %></td>
          <td><%= specie.hair_colors %></td>
          <td><%= specie.eye_colors %></td>
          <td><%= specie.language %></td>
          <td><%= specie.average_height %></td>
          <td><%= specie.average_lifespan %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
