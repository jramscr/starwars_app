<h1>People</h1>

<div class="table-responsive">
  <table class="js--datatable display responsive no-wrap table table-striped table-bordered">
    <thead>
      <tr>
        <th>Name</th>
        <th>Height</th>
        <th>Mass</th>
        <th>Hair Color</th>
        <th>Skin Color</th>
        <th>Gender</th>
      </tr>
    </thead>
    <tbody>
      <% @people.each do |person| %>
        <tr>
          <td><%= person.name %></td>
          <td><%= person.height %></td>
          <td><%= person.mass %></td>
          <td><%= person.hair_color %></td>
          <td><%= person.skin_color %></td>
          <td><%= person.gender %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
