<h1>Planets</h1>

<div class="table-responsive">
  <table class="js--datatable display responsive no-wrap table table-striped table-bordered">
    <thead>
      <tr>
        <th>Name</th>
        <th>Climate</th>
        <th>Gravity</th>
        <th>Terrain</th>
        <th>Population</th>
        <th>Rotation Period</th>
        <th>Orbital Period</th>
        <th>Surface Water</th>
        <th>Diameter</th>
      </tr>
    </thead>
    <tbody>
      <% @planets.each do |planet| %>
        <tr>
          <td><%= planet.name %></td>
          <td><%= planet.climate %></td>
          <td><%= planet.gravity %></td>
          <td><%= planet.terrain %></td>
          <td><%= planet.population %></td>
          <td><%= planet.rotation_period %></td>
          <td><%= planet.rotation_period %></td>
          <td><%= planet.surface_water %></td>
          <td><%= planet.diameter %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
