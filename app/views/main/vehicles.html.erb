<h1>Vehicles</h1>

<div class="table-responsive">
  <table class="js--datatable display responsive no-wrap table table-striped table-bordered">
    <thead>
      <tr>
        <th>Name</th>
        <th>Model</th>
        <th>Manufacturer</th>
        <th>Vehicle Class</th>
        <th>Consumables</th>
        <th>Cost in credits</th>
        <th>Length</th>
        <th>Max Atmosphering Speed</th>
        <th>Crew</th>
        <th>Passengers</th>
        <th>Cargo Capacity</th>
        <th>Hyperdrive Rating</th>
      </tr>
    </thead>
    <tbody>
      <% @vehicles.each do |vehicle| %>
        <tr>
          <td><%= vehicle.name %></td>
          <td><%= vehicle.model %></td>
          <td><%= vehicle.manufacturer %></td>
          <td><%= vehicle.vehicle_class %></td>
          <td><%= vehicle.consumables %></td>
          <td><%= vehicle.cost_in_credits %></td>
          <td><%= vehicle.length %></td>
          <td><%= vehicle.max_atmosphering_speed %></td>
          <td><%= vehicle.crew %></td>
          <td><%= vehicle.passengers %></td>
          <td><%= vehicle.cargo_capacity %></td>
          <td><%= vehicle.hyperdrive_rating %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
